{
  "rulesDirectory": ["node_modules/codelyzer"],
  "extends": ["angular-tslint-rules", "tslint-sonarts"],
  "linterOptions": {
    "exclude": [
      "**/node_modules/**/*",
      "**/src/assets/**",
      "**/*spec.ts",
      "**/*test.ts",
      "e2e/**",
      "**/src/polyfills.ts"
    ]
  },
  "rules": {
    "directive-selector": [true, "attribute", ["join"], "camelCase"],
    "component-selector": [true, "element", ["join"], "kebab-case"],
    "use-input-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "no-output-named-after-standard-event": true,
    "max-inline-declarations": true,
    "no-life-cycle-call": true,
    "prefer-output-readonly": true,
    "no-conflicting-life-cycle-hooks": true,
    "enforce-component-selector": true,
    "no-queries-parameter": true,
    "prefer-inline-decorator": false,
    "interface-name": [true, "always-prefix"],

    "component-class-suffix": [true, "Component"],
    "directive-class-suffix": [true, "Directive"],

    "no-empty": [true, "allow-empty-catch"],
    "curly": true,
    "comment-format": [true, "check-space"],
    "i18n": [false],

    "typedef": [false],
    "no-inferrable-types": false,

    "trailing-comma": [true],
    "arrow-parens": [true],
    "newline-per-chained-call": [false],
    "newline-before-return": [false],
    "no-null-keyword": [false],
    "no-implicit-dependencies": false,


    "angular-whitespace": [true, "check-pipe", "check-semicolon"],
    "trackBy-function": false,

    "no-unused-css": false,
    "array-type": false,
    "no-template-call-expression": true,

    "no-small-switch": false,
    "cognitive-complexity": false
  }
}
